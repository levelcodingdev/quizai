{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",              // ← Use Node-style resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Fix 3rd-party type problems
    "skipLibCheck": true,                    // ← Important: skip type errors in node_modules

    // Fix build errors with Buffer, JSX, Request, etc.
    "types": ["node"],                       // ← Include Node.js types

    // Optional: clean build info cache
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "include": ["src", "src/types/types.d.ts", "src/types/global.d.ts"]
}
